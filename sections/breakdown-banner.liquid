<script>
  class BreakdownCarousel {
    constructor(container) {
      this.container = container;
      this.points = container.querySelectorAll('.breakdown-banner__point');
      this.currentIndex = 0;
      this.isEnabled = container.dataset.carouselEnabled === 'true';
      this.speed = parseInt(container.dataset.carouselSpeed) || 3000;
      this.intervalId = null;
      
      if (this.isEnabled && this.points.length > 1) {
        this.init();
      }
    }
    
    init() {
      // Only enable on mobile
      this.checkScreenSize();
      window.addEventListener('resize', () => this.checkScreenSize());
    }
    
    checkScreenSize() {
      const isMobile = window.innerWidth <= 899;
      
      if (isMobile && this.isEnabled) {
        this.startCarousel();
        this.container.classList.add('carousel-enabled');
      } else {
        this.stopCarousel();
        this.container.classList.remove('carousel-enabled');
        // Reset all points to visible on desktop
        this.points.forEach(point => {
          point.classList.remove('active');
          point.style.position = '';
          point.style.opacity = '';
          point.style.transform = '';
        });
      }
    }
    
    startCarousel() {
      if (this.intervalId) return;
      
      // Set initial state
      this.showPoint(0);
      
      this.intervalId = setInterval(() => {
        this.nextPoint();
      }, this.speed);
    }
    
    stopCarousel() {
      if (this.intervalId) {
        clearInterval(this.intervalId);
        this.intervalId = null;
      }
    }
    
    showPoint(index) {
      this.points.forEach((point, i) => {
        point.classList.toggle('active', i === index);
      });
      this.currentIndex = index;
    }
    
    nextPoint() {
      const nextIndex = (this.currentIndex + 1) % this.points.length;
      this.showPoint(nextIndex);
    }
  }
  
  // Initialize carousel when DOM is loaded
  document.addEventListener('DOMContentLoaded', function() {
    const carouselContainers = document.querySelectorAll('.breakdown-banner__points');
    carouselContainers.forEach(container => {
      new BreakdownCarousel(container);
    });
  });

  // Reinitialize on theme editor changes
  document.addEventListener('shopify:section:load', function(event) {
    const carouselContainers = event.target.querySelectorAll('.breakdown-banner__points');
    carouselContainers.forEach(container => {
      new BreakdownCarousel(container);
    });
  });
</script>

<div
  data-section-id="{{ section.id }}"
  class="breakdown-banner {% if settings.animations %} scroll-trigger animate--slide-in {% endif %} {% if settings.disabled_animations_on_mobile %} disabled-on-mobile {% endif %}"
>
  <div class="breakdown-banner__container">
    {% if section.settings.color-overlay != 'rgba(0,0,0,0)' %}
      <div class="breakdown-banner__overlay"></div>
    {% endif %}

    <div class="breakdown-banner__content">
      <div class="breakdown-banner__text-section">
        {% if section.settings.heading != blank %}
          <h2 class="breakdown-banner__heading">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

                 {% if section.blocks.size > 0 %}
           <div class="breakdown-banner__points" 
                data-carousel-enabled="{{ section.settings.enable_mobile_carousel }}"
                data-carousel-speed="{{ section.settings.carousel_speed | default: 3000 }}">
             {% for block in section.blocks %}
               <div class="breakdown-banner__point {% if forloop.first %}active{% endif %}" 
                    data-block-id="{{ block.id }}"
                    data-carousel-index="{{ forloop.index0 }}">
                 <div class="breakdown-banner__icon">
                   {% if block.settings.icon_type == 'material' %}
                     <span class="material-icons">{{ block.settings.material_icon | default: 'star' }}</span>
                   {% else %}
                     {{ block.settings.custom_icon | default: '★' }}
                   {% endif %}
                 </div>
                 <div class="breakdown-banner__point-text">
                   {{ block.settings.point_text }}
                 </div>
               </div>
             {% endfor %}
           </div>
         {% endif %}
      </div>

      {% if section.settings.side_image %}
        <div class="breakdown-banner__image-section">
          <img
            class="breakdown-banner__image"
            srcset="
              {% if section.settings.side_image.width >= 400 %}{{ section.settings.side_image | image_url: width: 400 }} 400w, {% endif %}
              {% if section.settings.side_image.width >= 600 %}{{ section.settings.side_image | image_url: width: 600 }} 600w, {% endif %}
              {% if section.settings.side_image.width >= 800 %}{{ section.settings.side_image | image_url: width: 800 }} 800w, {% endif %}
              {{ section.settings.side_image | image_url: width: 600 }} 600w
            "
            sizes="(min-width: 900px) 50vw, 100vw"
            src="{{ section.settings.side_image | image_url: width: 600 }}"
            alt="{{ section.settings.side_image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.side_image.width }}"
            height="{{ section.settings.side_image.height }}"
          >
        </div>
      {% endif %}
    </div>
  </div>
</div>

