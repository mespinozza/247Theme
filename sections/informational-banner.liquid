{% assign text_rgb = section.settings['color-body-text'] | color_to_rgb %}

<style>
  [data-section-id="{{ section.id }}"] {
    {% if section.settings.margin-top %}
      --section-gap-top: {{ section.settings.margin-top }}px;
    {% endif %}

    {% if section.settings.margin-bottom %}
      --section-gap-bottom: {{ section.settings.margin-bottom }}px;
    {% endif %}

    {% if section.settings.full-width-enabled %}
      --border-radius: 0;
    {% endif %}

    {% if section.settings.slide_height == 'fixed_height' %}
      --section-height: {{ section.settings.mobile_fixed_height }}px;
      --section-height-desk: {{ section.settings.desktop_fixed_height }}px;
    {% endif %}

    {% if section.settings.slide_height == 'adapt_to_image' %}
      --first-slide-ratio: {{ section.settings.background_image.aspect_ratio | default: 1 }};
      --first-slide-ratio-desk: {{ section.settings.background_image.aspect_ratio | default: 2.5 }};
    {% endif %}

    --font-badge-scale-desk: {{ section.settings.badge_size | divided_by: 100.0 }};
    --font-badge-scale: {{ section.settings.badge_size_mobile | divided_by: 100.0 }};

    --font-headline-scale-desk: {{ section.settings.heading_size | divided_by: 100.0 }};
    --font-headline-scale: {{ section.settings.heading_size_mobile | divided_by: 100.0 }};

    --font-subheading-scale-desk: {{ section.settings.subheading_size | divided_by: 100.0 }};
    --font-subheading-scale: {{ section.settings.subheading_size_mobile | divided_by: 100.0 }};

    --logo-scale-desk: {{ section.settings.logo_size | divided_by: 100.0 }};
    --logo-scale: {{ section.settings.logo_size_mobile | divided_by: 100.0 }};

    --logo-padding-horizontal: {{ section.settings.logo_padding_horizontal | default: 0 }}px;
    --logo-padding-vertical: {{ section.settings.logo_padding_vertical | default: 0 }}px;
    --logo-padding-horizontal-mobile: {{ section.settings.logo_padding_horizontal_mobile | default: 0 }}px;
    --logo-padding-vertical-mobile: {{ section.settings.logo_padding_vertical_mobile | default: 0 }}px;
  }

  [data-section-id="{{ section.id }}"] .hero__overlay {
    {% if text_rgb != 'rgba(0, 0, 0, 0.0)' %}
      --color-custom-text: {{ section.settings.color-body-text }};
    {% endif %}

    {% if background_rgb != 'rgba(0, 0, 0, 0.0)' %}
      --color-overlay-rgb: {{ section.settings.color-overlay | color_to_rgb | remove: 'rgb(' | remove: ')' }};
      --color-overlay-opacity: {{ section.settings.color-overlay-opacity | divided_by: 100.0 }};
    {% endif %}

    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(var(--color-overlay-rgb, 0, 0, 0), var(--color-overlay-opacity, 0.5));
    display: flex;
    align-items: center;
    z-index: 2;
  }

  [data-section-id="{{ section.id }}"] .hero__overlay {
    padding: {{ section.settings.content_padding_vertical | default: 40 }}px {{ section.settings.content_padding_horizontal | default: 40 }}px;
  }

  [data-section-id="{{ section.id }}"] .hero__overlay.hero__text-left {
    justify-content: flex-start;
  }

  [data-section-id="{{ section.id }}"] .hero__overlay.hero__text-center {
    justify-content: center;
  }

  [data-section-id="{{ section.id }}"] .hero__overlay.hero__text-right {
    justify-content: flex-end;
  }

  /* Mobile-specific content alignment */
  @media (max-width: 1199px) {
    [data-section-id="{{ section.id }}"] .hero__overlay.mobile-center {
      justify-content: center;
      text-align: center;
    }

    [data-section-id="{{ section.id }}"] .hero__overlay.mobile-center .informational-banner__logo {
      justify-content: center;
    }
  }

  @media (max-width: 1199px) {
    [data-section-id="{{ section.id }}"] .hero__overlay {
      padding: {{ section.settings.content_padding_vertical_mobile | default: 20 }}px {{ section.settings.content_padding_horizontal_mobile | default: 20 }}px;
    }
  }

  [data-section-id="{{ section.id }}"] .informational-banner__badge {
    background-color: {{ section.settings.badge_background_color }};
    color: {{ section.settings.badge_text_color }};
    border-radius: {{ section.settings.badge_border_radius }}px;
    padding: 8px 16px;
    display: inline-block;
    font-weight: 600;
    margin-bottom: 16px;
    font-size: calc(var(--font-badge-scale-desk, 1) * 16px);
  }

  @media (max-width: 1199px) {
    [data-section-id="{{ section.id }}"] .informational-banner__badge {
      font-size: calc(var(--font-badge-scale, 1) * 16px);
    }
  }

  [data-section-id="{{ section.id }}"] .informational-banner__heading {
    font-weight: 900;
    line-height: 0.9;
    margin-bottom: 8px;
    font-size: calc(var(--font-headline-scale-desk, 1) * 48px);
    color: {{ section.settings.heading_color | default: '#8B0000' }};
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  @media (max-width: 1199px) {
    [data-section-id="{{ section.id }}"] .informational-banner__heading {
      font-size: calc(var(--font-headline-scale, 1) * 36px);
    }
  }

  /* Logo Styles */
  [data-section-id="{{ section.id }}"] .informational-banner__logo {
    margin-bottom: 8px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    line-height: 1;
  }

  [data-section-id="{{ section.id }}"] .informational-banner__logo.text-center {
    justify-content: center;
  }

  [data-section-id="{{ section.id }}"] .informational-banner__logo.text-right {
    justify-content: flex-end;
  }

  [data-section-id="{{ section.id }}"] .informational-banner__logo img {
    height: calc(var(--logo-scale-desk, 1) * {{ section.settings.logo_base_height | default: 80 }}px);
    max-width: calc(var(--logo-scale-desk, 1) * {{ section.settings.logo_base_max_width | default: 300 }}px);
    width: auto;
    object-fit: contain;
    display: block;
    margin: 0;
    padding: var(--logo-padding-vertical) var(--logo-padding-horizontal);
    vertical-align: top;
  }

  @media (max-width: 1199px) {
    [data-section-id="{{ section.id }}"] .informational-banner__logo img {
      height: calc(var(--logo-scale, 1) * {{ section.settings.logo_base_height_mobile | default: 60 }}px);
      max-width: calc(var(--logo-scale, 1) * {{ section.settings.logo_base_max_width_mobile | default: 250 }}px);
      padding: var(--logo-padding-vertical-mobile) var(--logo-padding-horizontal-mobile);
    }
  }

  [data-section-id="{{ section.id }}"] .informational-banner__subheading {
    margin-bottom: 24px;
    opacity: 1;
    font-size: calc(var(--font-subheading-scale-desk, 1) * 24px);
    color: {{ section.settings.subheading_color | default: '#2c2c2c' }};
    font-weight: 500;
    line-height: 1.2;
  }

  @media (max-width: 1199px) {
    [data-section-id="{{ section.id }}"] .informational-banner__subheading {
      font-size: calc(var(--font-subheading-scale, 1) * 20px);
    }
  }

  [data-section-id="{{ section.id }}"] .informational-banner__container {
    background-size: cover;
    background-position: {{ section.settings.background_position | default: 'center center' }};
    background-repeat: no-repeat;
    position: relative;
    min-height: var(--section-height, 400px);
    width: 100%;
    overflow: hidden;
  }

  @media (min-width: 1200px) {
    [data-section-id="{{ section.id }}"] .informational-banner__container {
      min-height: var(--section-height-desk, 400px);
    }
  }

  [data-section-id="{{ section.id }}"] .informational-banner__button {
    background-color: #FFC107 !important;
    color: #000000 !important;
    border: none !important;
    font-weight: 700;
    padding: 12px 24px;
    border-radius: 20px;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  [data-section-id="{{ section.id }}"] .informational-banner__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.4),
      transparent
    );
    transition: left 0.6s ease;
  }

  [data-section-id="{{ section.id }}"] .informational-banner__button:hover {
    background-color: #E6AC00 !important;
    color: #000000 !important;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  [data-section-id="{{ section.id }}"] .informational-banner__button:hover::before {
    left: 100%;
  }
</style>

{% if section.settings['full-width-enabled'] %}
  {% assign customwrapperclass = 'hero__wrapper--full' %}
{% else %}
  {% assign customwrapperclass = 'hero__wrapper' %}
{% endif %}

<div
  data-section-id="{{ section.id }}"
  class="{{ customwrapperclass }} {% if settings.animations %} scroll-trigger animate--slide-in {% endif %} {% if settings.disabled_animations_on_mobile %} disabled-on-mobile {% endif %}"
>
  <div class="{% if settings.animations %} scroll-trigger animate--slide-in {% endif %} {% if settings.disabled_animations_on_mobile %} disabled-on-mobile {% endif %}">
    <div class="hero hero--grid informational-banner__container"
         {% if section.settings.background_image %}
           style="background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');"
         {% endif %}>
      
      <div class="hero__overlay hero__text-{{ section.settings.text_position }}{% if section.settings.mobile_center_content %} mobile-center{% endif %}">
        <div class="hero__content">
          {% if section.settings.badge_text != blank %}
            <div class="informational-banner__badge">
              {{ section.settings.badge_text }}
            </div>
          {% endif %}

          {% comment %} Display either heading text or logo {% endcomment %}
          {% if section.settings.content_type == 'logo' and section.settings.logo_image != blank %}
            <div class="informational-banner__logo text-{{ section.settings.text_position }}">
              <img src="{{ section.settings.logo_image | image_url: width: 600 }}" 
                   alt="{{ section.settings.logo_alt_text | default: 'Logo' | escape }}"
                   loading="lazy">
            </div>
          {% elsif section.settings.content_type == 'text' and section.settings.heading != blank %}
            <div class="informational-banner__heading h1">
              {{ section.settings.heading }}
            </div>
          {% endif %}

          {% if section.settings.subheading != blank %}
            <div class="informational-banner__subheading h3">
              {{ section.settings.subheading }}
            </div>
          {% endif %}

          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
            <a 
              href="{{ section.settings.button_link }}" 
              class="button informational-banner__button {% if section.settings.button_full_width %}button--full-width{% endif %}"
            >
              {{ section.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

